{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "ws", "mocha", "vscode"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}